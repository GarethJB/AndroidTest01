<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notice.NoticeFragment"
    android:orientation="vertical">

    <!-- 알림선택창 -->
    <RelativeLayout
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_notice_nt"
            android:text="알림"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/line_notice"
            android:background="#EAEAEA"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_notice_nt"
            android:layout_width="2dp"
            android:layout_height="16dp"/>
        <TextView
            android:id="@+id/tv_notice_act"
            android:text="활동"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/line_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="안읽음 보기"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- 알림리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_notice"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>