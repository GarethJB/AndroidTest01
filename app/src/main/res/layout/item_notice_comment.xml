<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_item_notice_icon"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="답글"
            android:textSize="10dp"
            android:textColor="#707070"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_below="@id/imgv_item_notice_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_go_comment"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:text="이름"
                android:textSize="14dp"
                android:textColor="#8BC34A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="님이"
                android:textSize="14dp"
                android:textColor="#707070"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_title"
                android:text="글제목"
                android:textSize="14dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="글에 답글을 남겼습니다."
                android:textSize="14dp"
                android:textColor="#707070"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_comment"
            android:text="내용내용내용내용내용내용내내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
            android:textSize="14dp"
            android:textColor="#707070"
            android:paddingRight="10dp"
            android:layout_marginVertical="2dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_date"
            android:text="2022.12.9"
            android:textSize="14dp"
            android:textColor="#707070"
            android:layout_weight="2.5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgv_item_notice_x"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="읽음"
            android:textSize="10dp"
            android:textColor="#707070"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

    </RelativeLayout>
</LinearLayout>