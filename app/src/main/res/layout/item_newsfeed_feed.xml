<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- 작성자 프로필 -->
    <RelativeLayout
        android:id="@+id/rel_newsfeed_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgv_feed_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imgv_feed_profile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_feed_name"
                android:text="이웃"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_feed_date"
                android:text="1시간 전"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:src="@drawable/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="8dp"
            android:layout_height="16dp"/>
    </RelativeLayout>
    <!-- 글내용 -->
    <LinearLayout
        android:id="@+id/line_newsfeed_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgv_feed_photo"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <TextView
            android:id="@+id/tv_feed_title"
            android:text="제목"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_feed_contents"
            android:text="글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용"
            android:textSize="14dp"
            android:textColor="#515151"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <!-- 공감 및 댓글 -->
    <RelativeLayout
        android:id="@+id/rel_go_comment"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/imgv_like"
            android:src="@drawable/icon_like"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_likes"
            android:text="6"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imgv_like"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgv_comment"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_likes"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_comments"
                android:text="6"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/imgv_comment"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/icon_share"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <!-- 구분선 -->
    <ImageView
        android:background="#EAEAEA"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>