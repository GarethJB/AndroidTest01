<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comment.CommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- top navigation -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgv_comment_back"
                android:src="@drawable/icon_search"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_blogname"
                android:text="블로그제목"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/imgv_posting_search"
                android:src="@drawable/icon_search"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/tv_go_posting"
                android:layout_width="60dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tv_go_posting"
                android:text="글보기"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <ImageView
            android:background="#CFCFCF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!-- 콘텐츠 -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/container"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 댓글정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgv_profile"
                            android:background="#123"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                            <TextView
                                android:id="@+id/tv_name"
                                android:text="이웃"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/imgv_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/imgv_post_more"
                            android:background="#123"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="30dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_comment"
                    android:text="댓글1"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:text="2022. 12. 5."
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="답글"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="30dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/btn_like"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>
                        <TextView
                            android:id="@+id/tv_likes"
                            android:text="0"
                            android:gravity="center"
                            android:layout_width="15dp"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:background="#CFCFCF"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <!-- 댓글입력창 -->
    <LinearLayout
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <ImageView
            android:background="#CFCFCF"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:hint="댓글을 입력해주세요"
                android:layout_weight="8.5"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <Button
                android:text="등록"
                android:background="#9A9A9A"
                android:backgroundTint="#00000000"
                android:layout_marginVertical="0dp"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>