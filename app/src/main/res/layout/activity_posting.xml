<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posting.PostingActivity"
    android:orientation="vertical">

    <!-- top navigation -->
    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgv_posting_back"
            android:src="@drawable/icon_search"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_posting_blogname"
            android:text="블로그제목"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/imgv_posting_search"
            android:src="@drawable/icon_search"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/imgv_posting_burger"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/imgv_posting_burger"
            android:src="@drawable/icon_burger"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <ImageView
        android:background="#CFCFCF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- 콘텐츠 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 글정보 -->
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_posting_category"
                    android:text="카테고리"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_posting_title"
                    android:text="글제목"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgv_posting_profile"
                        android:background="#123"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imgv_posting_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_posting_name"
                            android:text="이웃"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_posting_date"
                            android:text="1시간 전"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_toLeftOf="@+id/imgv_post_more"
                        android:layout_width="60dp"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/tv_posting_neighbor"
                            android:text="서로이웃"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/imgv_post_more"
                        android:background="#123"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="10dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:background="#CFCFCF"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <!--글내용-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/imgv_posting_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />
                <TextView
                    android:id="@+id/tv_posting_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용" />
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:background="#CFCFCF"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/line_go_comment"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_posting_like"
            android:background="#E91E63"
            android:backgroundTint="#E91E63"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_posting_likes"
            android:text="6"
            android:textSize="16dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/line_newsfeed_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_posting_comments"
                android:text="6"
                android:textSize="16dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>