<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/line_list">
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:text="2022 카타르 월드컵 모로코 대 포르투갈 분석 경기일정 피파랭킹 모로코"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:text="닉네임"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_date"
                android:text="· n시간 전"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
        <!-- 공감 및 댓글 -->
        <RelativeLayout
            android:id="@+id/line_go_comment"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/imgv_like"
                android:src="@drawable/icon_like"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_likes"
                android:text="6"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgv_like"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgv_comment"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_likes"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_comments"
                android:text="6"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/imgv_comment"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
        <ImageView
            android:id="@+id/imgv_photo"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

</LinearLayout>