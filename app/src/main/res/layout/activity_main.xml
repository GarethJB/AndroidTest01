<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- top navigation -->
    <RelativeLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_top"
            android:src="@drawable/logo_long"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgv_time"
            android:src="@drawable/icon_time"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/imgv_search"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imgv_search"
            android:src="@drawable/icon_search"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/fl_calendar"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fl_calendar"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgv_setting"
                android:src="@drawable/icon_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_calendar"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />

        </FrameLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>